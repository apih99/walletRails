<h1 class="text-3xl font-bold tracking-tight text-slate-900 mb-8">Available Products</h1>

<div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
  <% @products.each do |product| %>
    <div class="flex flex-col justify-between rounded-xl bg-white p-6 shadow-lg transition hover:shadow-xl">
      <div>
        <h3 class="text-lg font-semibold text-slate-800"><%= product.name %></h3>
        <p class="mt-2 text-sm text-slate-500">A top-quality item just for you lah!</p>
      </div>

      <div class="mt-4 flex items-center justify-between">
        <p class="text-xl font-bold text-indigo-600"><%= number_to_currency(product.price) %></p>
        <%= button_to "Buy Now", purchase_product_path(product), method: :post, class: "rounded-lg bg-indigo-600 px-4
        py-2 text-sm font-semibold text-white hover:bg-indigo-700" %>
      </div>
    </div>
  <% end %>
</div>