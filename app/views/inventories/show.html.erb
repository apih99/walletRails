<h1 class="text-3xl font-bold tracking-tight text-slate-900 mb-8">My Inventory</h1>

<% if @inventory_items.empty? %>
  <div class="text-center rounded-lg border-2 border-dashed border-gray-300 p-12">
    <h3 class="mt-2 text-sm font-medium text-gray-900">No products owned</h3>
    <p class="mt-1 text-sm text-gray-500">You haven't purchased any products yet.</p>
    <div class="mt-6">
      <%= link_to 'Browse Products', root_path, class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500" %>
    </div>
  </div>
<% else %>
  <div class="overflow-hidden rounded-lg bg-white shadow">
    <ul role="list" class="divide-y divide-gray-200">
      <% @inventory_items.each do |item| %>
        <li class="px-6 py-4">
          <div class="flex items-center justify-between">
            <p class="text-md font-medium text-indigo-600 truncate"><%= item.product.name %></p>
            <div class="ml-2 flex-shrink-0 flex">
              <p class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                Quantity: <%= item.quantity %>
              </p>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>